<?xml version="1.0" encoding="UTF-8" ?>
<!--
1.	Usar un relativelayout para listar una lista de 6 textview
 uno debajo del otro,
 intercalando uno a la derecha y otro a la izquierda los textview y colocÃ¡ndole los numero en letras
  ejemplo, uno, dos, tres, cuatro y cinco a cada textview
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt1"
        android:text="UNO"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/txt2"
        android:text="DOS"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/txt1"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txt3"
        android:text="TRES"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/txt2"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/txt4"
        android:text="CUATRO"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/txt3"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txt5"
        android:text="CINCO"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/txt4"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/txt6"
        android:text="SEIS"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/txt5"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>