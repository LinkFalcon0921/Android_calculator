<?xml version="1.0" encoding="UTF-8" ?><!--
4.	Crear un layout y colocar un framelayout
y dentro colocar dos linearlayout de forma vertical,
 cada uno con dos pequeño párrafo como un pensamiento de superación
y colocar dos botones aceptar y cancelar debajo de cada layout
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Tú eres el resultado de ti mismo"
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Aceptar" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Cancelar" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="El triunfo del verdadero hombre surge de las cenizas del error."
            android:textAlignment="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_accept1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Aceptar" />

            <Button
                android:id="@+id/btn_cancel1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Cancelar" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>